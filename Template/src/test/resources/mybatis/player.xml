<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="player">

    <select id="getPlayerPo" parameterType="dbInfo" resultType="PlayerPo">
        select `uid`,`exp`,`level` from ${dbName}.player_${platformName} where uid=#{uid};
    </select>

    <update id="updatePlayerPo" parameterType="dbInfo" >
	    update ${dbName}.player_${platformName} set `exp` = #{exp} ,`level` = #{level}  where `uid` = #{uid};
    </update>

    <insert id="insertPlayerPo" parameterType="dbInfo" >
	    insert into ${dbName}.player_${platformName} (`uid`,`exp`,`level`) values (#{uid} ,#{exp} ,#{level} );
    </insert>
	
    <delete id="deletePlayerPo" parameterType="dbInfo" >
	    delete from ${dbName}.player_${platformName} where `uid` = #{uid};
    </delete>
</mapper>