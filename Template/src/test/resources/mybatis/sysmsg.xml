<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="sysmsg">

    <select id="getSysmsgPos" parameterType="dbInfo" resultType="SysmsgPo">
        select `id`,`uid`,`msg`,`param` from ${dbName}.sysmsg_${tbIndex} where uid=#{uid};
    </select>

    <update id="updateSysmsgPo" parameterType="dbInfo" >
	    update ${dbName}.sysmsg_${tbIndex} set `msg` = #{msg} ,`param` = #{param}  where `id` = #{subId};
    </update>

    <insert id="insertSysmsgPo" parameterType="dbInfo" >
	    insert into ${dbName}.sysmsg_${tbIndex} (`id`,`uid`,`msg`,`param`) values (#{id} ,#{uid} ,#{msg} ,#{param} );
		<selectKey resultType="int" keyProperty="id">
			SELECT @@IDENTITY AS id;
		</selectKey>
    </insert>
	
    <delete id="deleteSysmsgPo" parameterType="dbInfo" >
	    delete from ${dbName}.sysmsg_${tbIndex} where `id` = #{subId};
    </delete>
</mapper>