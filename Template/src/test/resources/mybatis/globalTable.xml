<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="globaltable">

    <select id="getGlobalTablePo" parameterType="dbInfo" resultType="GlobalTablePo">
        select `id`,`name` from ${dbName}.global_table where id=#{id};
    </select>

    <update id="updateGlobalTablePo" parameterType="dbInfo" >
	    update ${dbName}.global_table set `name` = #{name}  where `id` = #{id};
    </update>

    <insert id="insertGlobalTablePo" parameterType="dbInfo" >
	    insert into ${dbName}.global_table (`id`,`name`) values (#{id} ,#{name} );
		<selectKey resultType="int" keyProperty="id">
			SELECT @@IDENTITY AS id;
		</selectKey>
    </insert>
	
    <delete id="deleteGlobalTablePo" parameterType="dbInfo" >
	    delete from ${dbName}.global_table where `id` = #{id};
    </delete>
</mapper>