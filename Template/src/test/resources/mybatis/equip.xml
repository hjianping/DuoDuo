<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="equip">

    <select id="getEquipPos" parameterType="dbInfo" resultType="EquipPo">
        select `uid`,`id`,`exp`,`level` from ${dbName}.equip_${platformName}_${tbIndex} where uid=#{uid};
    </select>

    <update id="updateEquipPo" parameterType="dbInfo" >
	    update ${dbName}.equip_${platformName}_${tbIndex} set `exp` = #{exp} ,`level` = #{level}  where `uid` = #{uid} and `id` = #{subId};
    </update>

    <insert id="insertEquipPo" parameterType="dbInfo" >
	    insert into ${dbName}.equip_${platformName}_${tbIndex} (`uid`,`id`,`exp`,`level`) values (#{uid} ,#{id} ,#{exp} ,#{level} );
    </insert>
	
    <delete id="deleteEquipPo" parameterType="dbInfo" >
	    delete from ${dbName}.equip_${platformName}_${tbIndex} where `uid` = #{uid}  and `id` = #{subId};
    </delete>
</mapper>