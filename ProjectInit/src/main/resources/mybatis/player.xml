<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="player">

	<select id="getPlayerPo" parameterType="dbInfo" resultType="PlayerPo">
		select `uid`,`openid`,`token`,`nick`,`exp`,`level`,`m1`,`m2` from ${dbName}.player where uid=#{uid};
	</select>

	<update id="updatePlayerPo" parameterType="dbInfo" >
		update ${dbName}.player set `openid` = #{openid} ,`token` = #{token} ,`nick` = #{nick} ,`exp` = #{exp} ,`level` = #{level} ,`m1` = #{m1} ,`m2` = #{m2}  where `uid` = #{uid};
	</update>

	<insert id="insertPlayerPo" parameterType="dbInfo" >
		insert into ${dbName}.player (`uid`,`openid`,`token`,`nick`,`exp`,`level`,`m1`,`m2`) values (#{uid} ,#{openid} ,#{token} ,#{nick} ,#{exp} ,#{level} ,#{m1} ,#{m2} );
	</insert>

	<delete id="deletePlayerPo" parameterType="dbInfo" >
		delete from ${dbName}.player where `uid` = #{uid};
	</delete>
</mapper>
