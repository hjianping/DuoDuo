<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="item">

	<select id="getItemPos" parameterType="dbInfo" resultType="ItemPo">
		select `uid`,`item_id`,`count` from ${dbName}.item_${tbIndex} where uid=#{uid};
	</select>

	<update id="updateItemPo" parameterType="dbInfo" >
		update ${dbName}.item_${tbIndex} set `count` = #{count}  where `uid` = #{uid} and `item_id` = #{subId};
	</update>

	<insert id="insertItemPo" parameterType="dbInfo" >
		insert into ${dbName}.item_${tbIndex} (`uid`,`item_id`,`count`) values (#{uid} ,#{item_id} ,#{count} );
	</insert>

	<delete id="deleteItemPo" parameterType="dbInfo" >
		delete from ${dbName}.item_${tbIndex} where `uid` = #{uid}  and `item_id` = #{subId};
	</delete>
</mapper>
