<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE base[
		<!ELEMENT base (rediskey, beans,infos) >
		<!ATTLIST base baseDir CDATA #REQUIRED>
		<!ATTLIST base vmfilePath CDATA #REQUIRED>
		<!ATTLIST base filePostfix CDATA #REQUIRED>

		<!ELEMENT rediskey EMPTY>
		<!ATTLIST rediskey clazz CDATA #REQUIRED>

		<!ELEMENT infos (info+) >
		<!ELEMENT info EMPTY >
		<!ATTLIST info name ID #REQUIRED>
		<!ATTLIST info poref CDATA #REQUIRED>
		<!ATTLIST info redisRef IDREF #REQUIRED>
		<!ATTLIST info dbInfoRef IDREF #REQUIRED>
		<!ATTLIST info async (true|false) #REQUIRED>
		<!ELEMENT beans (bean+) >

		<!ELEMENT bean EMPTY >
		<!ATTLIST bean id ID #REQUIRED>
		<!ATTLIST bean clazz NMTOKEN #REQUIRED>
		]>

<base baseDir="src/test/java" vmfilePath="vm/entity_info_create.vm" filePostfix="java">
	<rediskey clazz="project.test.RedisKey" />

	<beans>
		<bean id="defaultRedis" clazz="project.test.RedisDataUtil" />

		<bean id="UidEntityDbInfo" clazz="org.qiunet.data.db.support.info.uidinfo.UidEntityDbInfo" />
		<bean id="UidEntityListDbInfo" clazz="org.qiunet.data.db.support.info.uidinfo.UidEntityListDbInfo" />
		<bean id="UidPlatformEntityDbInfo" clazz="org.qiunet.data.db.support.info.uidinfo.UidPlatformEntityDbInfo" />
		<bean id="UidPlatformEntityListDbInfo" clazz="org.qiunet.data.db.support.info.uidinfo.UidPlatformEntityListDbInfo" />
		<bean id="OpenidEntityDbInfo" clazz="org.qiunet.data.db.support.info.openidInfo.OpenidEntityDbInfo" />
		<bean id="IdEntityDbInfo" clazz="org.qiunet.data.db.support.info.idInfo.IdEntityDbInfo" />
		<bean id="IdEntityListDbInfo" clazz="org.qiunet.data.db.support.info.idInfo.IdEntityListDbInfo" />
		<bean id="IdGlobalDbInfo" clazz="org.qiunet.data.db.support.info.glboal.IdGlobalDbInfo" />
	</beans>

	<infos>
		<info name="PlayerEntityInfo" poref="PlayerPo"  async="true" redisRef="defaultRedis" dbInfoRef="UidPlatformEntityDbInfo" />
		<info name="ItemEntityInfo" poref="ItemPo" async="true" redisRef="defaultRedis" dbInfoRef="UidEntityListDbInfo" />
		<info name="LoginEntityInfo" poref="LoginPo" async="true" redisRef="defaultRedis" dbInfoRef="OpenidEntityDbInfo" />
		<info name="EquipEntityInfo" poref="EquipPo" async="true" redisRef="defaultRedis" dbInfoRef="UidPlatformEntityListDbInfo" />
	</infos>
</base>
