<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE base[
		<!ELEMENT base (entity+) >
		<!ATTLIST base baseDir CDATA #REQUIRED>
		<!ATTLIST base vmfilePath CDATA #REQUIRED>
		<!ATTLIST base filePostfix CDATA #REQUIRED>
		<!ELEMENT entity (constructor*,field+) >
		<!ATTLIST entity name ID #REQUIRED>
		<!ATTLIST entity dbInfoKey NMTOKEN #REQUIRED>
		<!ATTLIST entity packagePath NMTOKEN #REQUIRED>
		<!ATTLIST entity entityType (PlatformRedisList|RedisList|RedisEntity|PlatformRedisEntity) #REQUIRED>
		<!ATTLIST entity subKey CDATA "">

		<!ELEMENT constructor EMPTY>
		<!ATTLIST constructor constructorFields CDATA #REQUIRED>

		<!ELEMENT field EMPTY>
		<!ATTLIST field name NMTOKEN #REQUIRED>
		<!ATTLIST field type (int|String|Date|long|Boolean|boolean) #REQUIRED>
		<!ATTLIST field comment CDATA #REQUIRED>
		]>

<base baseDir="src/main/java" vmfilePath="vm/entity_create.vm" filePostfix="java">

	<entity name="PlayerPo" dbInfoKey="uid" packagePath="project.init.test.player.entity" entityType="RedisEntity">
		<constructor constructorFields="uid,openid,token" />

		<field name="uid" type="int" comment="uid " />
		<field name="openid" type="String" comment="openId" />
		<field name="token" type="String" comment="玩家的token" />
		<field name="nick" type="String" comment="昵称" />
		<field name="exp" type="int" comment="经验" />
		<field name="level" type="int" comment="等级" />
		<field name="m1" type="long" comment="金币" />
		<field name="m2" type="int" comment="元宝" />

	</entity>

	<entity name="LoginPo" dbInfoKey="openid" packagePath="project.init.test.login.entity" entityType="RedisEntity">
		<field name="openid" type="String" comment="openId" />
		<field name="zone_uids" type="String" comment="uid,角色名称;..." />
		<field name="home_sid" type="String" comment="openID 对应家园的sid" />
		<field name="last_uid" type="int" comment="最后登录的uid" />
		<field name="token" type="String" comment="openID 对应的 token" />
	</entity>

	<entity name="ItemPo" dbInfoKey="uid" packagePath="project.init.test.item.entity" entityType="RedisList" subKey="item_id">
		<field name="uid" type="int" comment="用户id"/>
		<field name="item_id" type="int" comment="物品id"/>
		<field name="count" type="int" comment="物品数量"/>
	</entity>
</base>
