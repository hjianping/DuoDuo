<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="sysmsg">

    <select id="getSysmsgPos" parameterType="dbInfo" resultType="SysmsgPo">
        select * from ${dbName}.sysmsg_${tbIndex} where uid = #{uid};
    </select>

    <update id="updateSysmsgPo" parameterType="dbInfo" >
        update ${dbName}.sysmsg_${tbIndex} SET
        `msg` = #{msg},
        `param` = #{param}
        where id = #{subId};
    </update>

    <insert id="insertSysmsgPo" parameterType="dbInfo">
        insert INTO ${dbName}.sysmsg_${tbIndex}
        (uid , `msg`, param)
        VALUES (
        #{uid}, #{msg},   #{param}
        );
        <selectKey resultType="int" keyProperty="id">
          SELECT @@IDENTITY AS id;
        </selectKey>
    </insert>
    <delete id="deleteSysmsgPo" parameterType="dbInfo" >
        DELETE FROM  ${dbName}.sysmsg_${tbIndex}  WHERE id = #{subId};
    </delete>
</mapper>