<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="login">

    <select id="getLoginPo" parameterType="dbInfo" resultType="loginPo">
        select * from ${dbName}.login where openid = #{openid};
    </select>

    <update id="updateLoginPo" parameterType="dbInfo" >
        update ${dbName}.login SET
        token = #{token}
        where openid = #{openid};
    </update>

    <insert id="insertLoginPo" parameterType="dbInfo" >
        insert INTO ${dbName}.login
        (openid, uid , token)
        VALUES (
        #{openid}, #{uid} , #{token}
        );
    </insert>
    <insert id="deleteLoginPo" parameterType="dbInfo" >
        DELETE FROM  ${dbName}.login  WHERE openid = #{openid};
    </insert>
</mapper>