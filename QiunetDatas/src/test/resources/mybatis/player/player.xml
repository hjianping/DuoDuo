<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="player">
    
    <select id="getPlayerPo" parameterType="dbInfo" resultType="PlayerPo">
        select * from ${dbName}.player_${platformName} where uid = #{uid};
    </select>

    <update id="updatePlayerPo" parameterType="dbInfo" >
        update ${dbName}.player_${platformName} SET
        `level` = #{level},
        exp=${exp}
        where uid = #{uid};
    </update>

    <insert id="insertPlayerPo" parameterType="dbInfo" >
        insert INTO ${dbName}.player_${platformName}
        (uid , `level`, exp)
        VALUES (
        #{uid}, #{level},   #{exp});
    </insert>
    <delete id="deletePlayerPo" parameterType="dbInfo" >
        DELETE FROM  ${dbName}.player_${platformName}  WHERE uid = #{uid};
    </delete>
</mapper>